{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "esnext.array"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "paths": {
      "src/*": ["src/*"],
      "tests/*": ["tests/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/src/*.ts", "./index.ts"]
}
